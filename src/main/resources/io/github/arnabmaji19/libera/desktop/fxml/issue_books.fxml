<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import java.net.URL?>
<AnchorPane xmlns:fx="http://javafx.com/fxml/1"
            xmlns="http://javafx.com/javafx/10.0.2-internal"
            fx:controller="io.github.arnabmaji19.libera.desktop.controller.IssueBooksController">

    <stylesheets>
        <URL value="@../css/style.css"/>
    </stylesheets>

    <Label layoutX="14.0" layoutY="14.0" styleClass="h1" text="Issue Boks" AnchorPane.leftAnchor="30.0"
           AnchorPane.topAnchor="14.0"/>
    <HBox layoutX="14.0" layoutY="63.0" AnchorPane.bottomAnchor="8.0"
          AnchorPane.leftAnchor="30.0" AnchorPane.rightAnchor="8.0" AnchorPane.topAnchor="80.0" spacing="50">
        <VBox spacing="8">
            <Label
                    text="Email"
                    styleClass="h3"/>
            <TextField
                    fx:id="emailTextField"
                    styleClass="form-control"/>
            <HBox alignment="CENTER_RIGHT" spacing="8">
                <ImageView fx:id="fetchUserLoadingAnimation" pickOnBounds="true" preserveRatio="true" visible="false">
                    <Image url="@../images/loading.gif"/>
                </ImageView>
                <Button
                        text="Fetch"
                        onAction="#fetchUser"/>
            </HBox>
            <VBox spacing="8" fx:id="userDetailsForm" visible="false">
                <Label
                        text="First Name"
                        styleClass="h3"/>
                <TextField
                        styleClass="form-control"
                        fx:id="firstNameTextField"
                        editable="false"/>
                <Label
                        text="Last Name"
                        styleClass="h3"/>
                <TextField
                        styleClass="form-control"
                        fx:id="lastNameTextField"
                        editable="false"/>
                <Label
                        text="Phone"
                        styleClass="h3"/>
                <TextField
                        styleClass="form-control"
                        fx:id="phoneTextField"
                        editable="false"/>
                <Label
                        text="Address"
                        styleClass="h3"/>
                <TextField
                        styleClass="form-control"
                        fx:id="addressTextField"
                        editable="false"/>
            </VBox>
        </VBox>
        <VBox spacing="8" fx:id="addHoldingForm" visible="false">
            <Label
                    styleClass="h3"
                    text="Add Holdings"/>
            <HBox spacing="8" alignment="CENTER_LEFT">
                <TextField
                        fx:id="holdingNumberTextField"
                        styleClass="form-control"/>
                <Button
                        text="Add"
                        onAction="#addHoldingToList"/>
            </HBox>
            <Label
                    text="Cart"
                    styleClass="h3"/>
            <ListView
                    fx:id="addedHoldingsListView"/>
            <HBox spacing="8" alignment="TOP_RIGHT">
                <ImageView pickOnBounds="true" preserveRatio="true" fx:id="checkoutLoadingAnimation" visible="false">
                    <Image url="@../images/loading.gif"/>
                </ImageView>
                <Button
                        text="Checkout"
                        onAction="#checkout"/>
            </HBox>
        </VBox>
    </HBox>
</AnchorPane>
